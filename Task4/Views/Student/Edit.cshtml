@model Task4.Entities.Student;


<div class="bg-light" style="width: 100%; height: 88.3vh;">
    <h3 class="text-center">Student: @ViewBag.EditStudent.Name</h3>
    <hr />
    <form class="d-flex flex-column flex-wrap justify-content-center align-items-center" asp-controller="Student" asp-action="Edit" method="post" enctype="multipart/form-data">
        <img id="mainImg" class="ms-3 rounded-circle" style="width: 20%; height: 30vh;" src="~/images/@(@ViewBag.EditStudent.URL)"/>
        <br />
        <input class="ms-5 mt-2 mb-2" type="file" onchange="previewImg(event)" accept="image/png, image/gif, image/jpeg" asp-for="File"/>
        <br />
        <label class="ms-5">ID: </label>
        <input class="border-0 ms-2 bg-dark text-light border-0" style="outline: none;" type="text" title="Your ID" readonly value="@ViewBag.EditStudent.ID" asp-for="ID"/>
        <br />
        <label class="ms-5 mt-3">Name: </label>
        <input class="ms-2 bg-dark text-light  border-0" type="text" placeholder="Enter name" required value="@ViewBag.EditStudent.Name" asp-for="Name"/>
        <br />
        <label class="ms-5 mt-3">Surname: </label>
        <input class="ms-2 bg-dark text-light border-0" type="text" placeholder="Enter surname" required value="@ViewBag.EditStudent.Surname" asp-for="Surname"/>
        <br />
        <label class="ms-5 mt-3">Age: </label>
        <input class="ms-2 bg-dark text-light border-0" type="number" min="18" max="99" placeholder="Enter age" required value="@ViewBag.EditStudent.Age" asp-for="Age"/>
        <br />
        <button class="bg-dark text-light border-0 rounded-pill pt-2 pb-2 ps-5 pe-5 mt-3" type="submit">Edit Profile</button>
    </form>
</div>