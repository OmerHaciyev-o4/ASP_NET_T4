@model Task4.Models.StudentViewModel;


<div class="bg-light" style="width: 100%; height: 88.3vh;">
    <h3 class="text-center">Welcome new student</h3>
    <hr />
    <form class="d-flex flex-column flex-wrap justify-content-center align-items-center" asp-controller="Student" asp-action="Create" method="post" enctype="multipart/form-data">
        <img id="mainImg" class="ms-3 rounded-circle" style="width: 20%; height: 30vh;" />
        <br />
        <input class="ms-5 mt-2 mb-2" type="file" asp-for="File" accept="image/png, image/gif, image/jpeg" onchange="previewImg(event)" required />
        <br />
        <label class="ms-5 mt-3">Name: </label>
        <input class="ms-2 bg-dark text-light  border-0" type="text" placeholder="Enter name" required asp-for="Student.Name" />
        <br />
        <label class="ms-5 mt-3">Surname: </label>
        <input class="ms-2 bg-dark text-light border-0" type="text" placeholder="Enter surname" required asp-for="Student.Surname" />
        <br />
        <label class="ms-5 mt-3">Age: </label>
        <input class="ms-2 bg-dark text-light border-0" type="number" min="18" max="99" value="18" placeholder="Enter age" required asp-for="Student.Age" />
        <br />
        <button class="bg-dark text-light border-0 rounded-pill pt-2 pb-2 ps-5 pe-5 mt-3" type="submit">Create Student</button>
    </form>
</div>